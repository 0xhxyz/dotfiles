#!/bin/bash

RET=$(echo -e "ğŸ”’ lock\nâšª suspend\nğŸ›‘ shutdown\nğŸŸ¡ reboot\nğŸšª logout\ncancel" | dmenu )

case $RET in
    'ğŸ”’ lock') setsid -f slock; setsid -f sudo xset s activate ;;
    'âšª suspend') setsid -f slock; systemctl suspend ;;
	'ğŸ›‘ shutdown') sudo shutdown now ;;
	'ğŸŸ¡ reboot') sudo reboot ;;
	'ğŸšª logout') killall -9 startx ;;
	# 'ğŸšª logout') killall -9 dwm; killall -9 pipewire-pulse ; killall -9 pipewire ; killall -9 wireplumber ;;
	# 'ğŸšª logout') killall -9 pipewire-pulse ; killall -9 pipewire ; killall -9 wireplumber ; loginctl kill-session self ;;
	*) ;;
esac
