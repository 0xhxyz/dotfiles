#!/bin/bash

# RET=$(echo -e "ğŸŸ¢ whatsapp\nğŸ”µ discord\nğŸŸ  newsboat\ncancel" | dmenu -i )
RET=$(echo -e "ğŸ”´ ytmpv\nğŸ”´ ytm\nğŸŸ  newsboat\nğŸ”µ discord\nğŸŸ¢ whatsapp\ncancel" | dmenu -i )

case $RET in
    'ğŸ”´ ytm') killall mpv ; mpv --input-ipc-server=/tmp/mpvsocket --volume=80 --no-video $(ytfzf --type=all -L -D) ;;
    'ğŸ”´ ytmpv') setsid -f mpv --volume=80 $(xclip -o) ;;
    'ğŸ”µ discord') setsid -f discord ;;
    'ğŸŸ¢ whatsapp') setsid -f whatsapp-for-linux ;;
    'ğŸŸ  newsboat') $TERMINAL -e newsboat ;;
    *) ;;
esac
