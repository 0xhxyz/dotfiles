#!/bin/bash

CLIP=$(xclip -o)
RET=$(echo -e "ðŸ“‹ clipboard\ncancel" | dmenu)

case $RET in
    #'ðŸ“‹ clipboard') setsid -f "$TERMINAL" -n spterm -g 120x34 -e dictsetsid $CLIP ;;
    #*) setsid -f "$TERMINAL" -n spterm -g 120x34 -e dictsetsid $RET
    'ðŸ“‹ clipboard') setsid -f "$TERMINAL" -e dictsetsid $CLIP ;;
    *) setsid -f "$TERMINAL" -e dictsetsid $RET
esac

