#!/bin/bash

sed -i 's/Fajr/ğŸŒ„-Fajr/g' ~/.prayertimes
sed -i 's/Sunrise/ğŸŒ…-Sunrise/g' ~/.prayertimes
sed -i 's/Dhuhr/ğŸ™ï¸-Dhuhr/g' ~/.prayertimes
sed -i 's/Asr/ğŸ›£ï¸-Asr/g' ~/.prayertimes
sed -i 's/Sunset/ğŸŒ‡-Sunset/g' ~/.prayertimes
sed -i 's/Maghrib/ğŸŒ‡-Maghrib/g' ~/.prayertimes
sed -i 's/Isha/ğŸŒ†-Isha/g' ~/.prayertimes
sed -i 's/Imsak/ğŸŒ‰-Imsak/g' ~/.prayertimes

cat ~/.prayertimes | jq . | head -13 | tail -8 | sed 's/"//g' | sed 's/,//g' | sed 's/ //g'

curl -s --output ~/.prayertimes "https://api.aladhan.com/v1/timingsByAddress/$(date +%d-%m-%Y)?address=Tunis,%20Tunisia&method=99&methodSettings=18.0,null,18.0"

